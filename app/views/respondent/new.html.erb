<%= form_for @respondent, :html => {:class => "form"}, :remote => true do |f| %>

<div class="row-fluid">
  <div class="row">
    <div class="span1"></div>
    <div class="span11">
      <h2><span class="title-setup">Set up your</span> <span
      class="title">Complimenti
        Tree</span></h2>
    </div>
  </div>
  <div class="row">
    <div class="span1"></div>
    <div class="span5">
      <%= image_tag('/assets/tree.png') %>
    </div>
    <div class="span5 center">
      <div id="myCarousel" class="carousel slide">
        <!-- Carousel items -->
        <div class="carousel-inner">
          <div class="active item">
            <div class="content-inner">
             <p>Giving and receiving gifts shouldn't feel like a bank transaction.</p>
              <p><span class="complimenti-title">COMPLIMENTI.CO</span> lets people receive cash gifts in a beautiful new way.</p>
              <div class="next-button">
                <a href="#myCarousel" data-slide="next"><%= image_tag('/assets/next_button.png', :id => 'button_1') %></a>
              </div>
            </div>
          </div>
          <div class="item">
            <div class="content-inner">
              <%= f.label :event, "What kind of event will this be?" %>
              <%= f.text_field :event, :placeholder => "event type", :id => "event_type" %>
              <br><br>
              <%= f.label :number_of_donors, "How many invitations will you need?" %>
              <%= f.text_field :number_of_donors, :placeholder => "# of invitees" %>
              <br><br>
              <div class="next-button">
                <a href="#myCarousel" data-slide="next"><%= image_tag('/assets/next_button.png', :id => 'button_2') %></a>
              </div>
            </div>
          </div>
          <div class="item">
            <div class="content-inner">
              <%= f.label :email, "Please enter your email address" %>
              <%= f.text_field :email, :placeholder => "my_name@something.com" %>
              <br><br>
              <%= f.submit("", :type => :image, :src => "/assets/next_button.png", :class => "next-button", :id => 'button_3')  %>
            </div>
          </div>
          <!-- Carousel nav -->
          <!--<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>-->
          <!--<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>-->
        </div>
      </div>
    </div>
    <div class="span1"></div>
  </div>
  <div class="span12"></div>
</div>

<% end %>
